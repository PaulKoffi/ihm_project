<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.Activity_List_Tab_Controller">
    <children>
    <BorderPane prefHeight="800.0" prefWidth="1200.0">
    <center>
    </center>
    <top>
        <AnchorPane prefHeight="100.0" prefWidth="1200.0" BorderPane.alignment="CENTER" />
    </top>
    <left>
        <AnchorPane prefHeight="800.0" prefWidth="90.0" BorderPane.alignment="CENTER" />
    </left>
    <right>
        <AnchorPane prefHeight="800.0" prefWidth="90.0" BorderPane.alignment="CENTER" />
    </right>
    <bottom>
        <AnchorPane prefHeight="100.0" prefWidth="1200.0" BorderPane.alignment="CENTER" />
    </bottom>
         <center>
             <VBox prefHeight="400.0">
               <children>
                  <HBox prefHeight="50.0">
                     <children>
                        <GridPane>
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0" />
                            <ColumnConstraints hgrow="SOMETIMES" prefWidth="200.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints prefHeight="60.0" vgrow="SOMETIMES" />
                            <RowConstraints prefHeight="60.0" vgrow="SOMETIMES" />
                          </rowConstraints>
                           <children>
                              <ComboBox fx:id="CBsort" prefHeight="25.0" prefWidth="150.0" GridPane.rowIndex="1">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor></ComboBox>
                              <RadioButton fx:id="RBcroiss" mnemonicParsing="false" selected="true" text="Decroissant" GridPane.columnIndex="1">
                                 <toggleGroup>
                                    <ToggleGroup fx:id="croissDecr" />
                                 </toggleGroup>
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor>
                              </RadioButton>
                              <RadioButton fx:id="RBdecr" mnemonicParsing="false" text="Croissant" toggleGroup="$croissDecr" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor></RadioButton>
                              <Label text="Tri par :" />
                           </children>
                        </GridPane>
                        <TextField fx:id="TFresearch" promptText="Rechercher" />
                     </children></HBox>
                  <ScrollPane hbarPolicy="NEVER" prefHeight="500.0">
                    <content>
                        <GridPane fx:id="gridPane">
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" prefWidth="250.0" />
                                <ColumnConstraints hgrow="SOMETIMES" prefWidth="250.0" />
                                <ColumnConstraints hgrow="SOMETIMES" prefWidth="250.0" />
                                <ColumnConstraints hgrow="SOMETIMES" prefWidth="250.0" />
                            </columnConstraints>
                            <rowConstraints>
                                  <RowConstraints prefHeight="250.0" vgrow="SOMETIMES" />
                                </rowConstraints>
                           <children>
                              <Button fx:id="BTaddActivity" mnemonicParsing="false" prefHeight="250.0" prefWidth="250.0" text="+">
                                 <cursor>
                                    <Cursor fx:constant="HAND" />
                                 </cursor></Button>
                           </children>
                              </GridPane>
                    </content>
                  </ScrollPane>
               </children></VBox>
         </center></BorderPane>
    </children>
</AnchorPane>
